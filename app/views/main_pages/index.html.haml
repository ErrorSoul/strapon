%body.bg
  .container-fluid(ng-controller="MountCtrl")
    = image_tag("bg/cloud1.png", class: "cloud img-responsive col-xs-1 x1")
    = image_tag("bg/cloud2.png", class: "cloud img-responsive col-xs-3 x2")
    = image_tag("bg/cloud3.png", class: "cloud img-responsive col-xs-2 x3")
    = image_tag("bg/cloud1.png", class: "cloud img-responsive col-xs-1 x4")
    = image_tag("bg/cloud2.png", class: "cloud img-responsive col-xs-4 x5")
    = image_tag("bg/cloud3.png", class: "cloud img-responsive col-xs-2 x6")
    
   
    .col-xs-12
      .button-group.pull-right
        %button.btn-sky.btn.sort(ng-click="subTab()") Sub Tab
        %button.btn-sky.btn(ng-click="addTab()") Add Tab
        
      
    .col-md-12
      .row
        .col-md-12      
          %p
            {{tab}}
          .container-main(class="{{isList()}}" )
           
            //.grid.mix(ng-repeat="post in p" class="{{isClass(post)}} " data-myorder="{{post.id}}" )
            
            .view.view-tenth.post.anima.square(  ng-repeat="post in p" class="{{isClass(post)}} " data-myorder="{{post.id}}" ng-hide="isHide($index)")
              
              %figure(ng-class="is_asset(post.asset.url)")
                %img(ng-if="post.asset.url" src="{{post.asset.url }}")       

                %figcaption.mask
                  %h2.base-class(ng-class="{new_class: bar}")
                    STRA
                    %span PON
                  %p {{post.title}}
                  %p

                  %a.info(ng-click="clicked('run')" href="/posts/{{post.id}}")
                    %i.fa.fa-arrow-up.fa-2x.base-class(class="{{myVar1}}")
                  %a.info(ng-click="add_post(post.id, 'my-class')" data-toggle="tooltip" data-placement="bottom" title="Прочитать потом")
                    %i.fa.fa-pause.fa-2x.base-class(class="{{myVar2}}")
                 
              
     

    
    
