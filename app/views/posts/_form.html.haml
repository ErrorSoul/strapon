

.col-xs-10.col-xs-offset-1
  .col-xs-8.media
    %a.pull-left
      %img{:alt => "...", :src => "{{user.image}}"}
     
    
      %p {{user.name}}
    
    
    
      
      
    .media-body
      %form{"accept-charset" => "UTF-8", :role => "form", "ng-submit" => "form.$valid && send(comment, num, id, $index)", :novalidate => true, :name => "form"}    
        .form-group
          %label(for="exampleInputText") Text
          %textarea#exampleInputText.form-control{:placeholder => "Enter text", :type => "text", "ng-model" => "comment.text", "rows" => "5"}


        %p {{num.path}}
        %p {{num.id}}
        %h1 {{message}}
        %button.btn.btn-default{:type => "submit"} Submit
        %button.btn.btn-default(ng-click="change_image()") Click
