

.col-xs-10.col-xs-offset-1
  .col-xs-8.media
    %a.pull-left
      %img{:alt => "...", :src => "{{user.image}}", :class => "user-image", :size => "48x48"}
      
    
      %p {{user.name}}
      
    
    
      
      
    .media-body
      %form{"accept-charset" => "UTF-8", :role => "form", "ng-submit" => "form.$valid && send( num, id, $index)", :novalidate => true, :name => "form"}    
        .form-group
         
          //%label(for="exampleInputText") Text
          %span(ng-if="!!num.name")
            %i.fa.fa-arrow-right.fa-2x
            %span
              {{num.name}}
         
          %span(ng-if="!num.name")
            %i.fa.fa-arrow-right.fa-2x
            %span= @post.user.name
              
              
          .editable(placeholder="Enter text" type="text" id="{{num.date}}" class="{{num.date}} {{num.class_flag}}")


        %p
          {{num.message}}
        %button.btn.btn-fresh(type="submit" ng-disabled="num.flag")
          %i.fa.fa-pencil.fa-2x
        
        %label.pull-right(ng-show="user.anonym") 
          %i.fa.fa-sign-in.fa-2x
          .btn-group
            %button.btn.btn-fresh(type="button" ng-click="twitter()")
              %i.fa.fa-twitter.fa-2x
          
        



