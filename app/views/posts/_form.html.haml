

.col-xs-10.col-xs-offset-1
  .col-xs-8.media
    %a.pull-left
      %img{:alt => "...", :src => "{{user.image}}"}
     
    
      %p {{user.name}}
    
    
    
      
      
    .media-body
      %form{"accept-charset" => "UTF-8", :role => "form", "ng-submit" => "form.$valid && send( num, id, $index)", :novalidate => true, :name => "form"}    
        .form-group
         
          %label(for="exampleInputText") Text
          .editable{:placeholder => "Enter text", :type => "text", "rows" => "5", :id => "{{num.date}}"}


       
        %button.btn.btn-default{:type => "submit"} Submit
        



