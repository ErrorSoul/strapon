%body.backg(ng-controller="MainPostDetailCtrl")
  .container-fluid
    
    .row.yar
      
      #wrapper.col-xs-12
        #sidebar.cola( data-spy="affix" data-offset-top="50")
          %ul.nav.nav-stacked
            %li.active{:role => "presentation"}
              %a(href="#{root_path}")
                
                = image_tag("menu/track.png",class: "img-responsive", size: "64x64" )
                  
                %p.inline Главная
            %li
              %a{:href => "#{index_path}"}
                
                = image_tag("menu/bull.png",class: "img-responsive", size: "64x64" )
                  
                %p.inline Дальше
            %li
              %a{:href => "#"}
                
                = image_tag("menu/egg.png",class: "img-responsive", size: "64x64" )
                  
                %p.inline Читать
            %li{:role => "presentation"}
              %a{:href => "#"} Profile
            %li{:role => "presentation"}
              %a{:href => "#"} Messages
              
            
           
             
        #content.x(ng-class="isClass()")
          #tar.col-xs-12
            .err(data-spy="affix" data-offset-top="40")
              %button#toggle.btn(ng-click="changeClass()" )
                Push me!
          
              
          .col-xs-12.ttt
            
            
            %h1.bender.col-xs-8.col-xs-offset-2= @post.title.html_safe
            .col-xs-9.col-xs-offset-1
              %img.img-thumbnail(src="#{@post.asset.url}")
            #text.col-xs-9.col-xs-offset-1= @post.text.html_safe
          //= render :partial => "form"
         
          .col-xs-12
            .col-xs-11.col-xs-offset-1
              .media
                %a.pull-left{:href => "#"}
                  %img{:alt => "...", :src => "http://placehold.it/128x128"}
                .media-body
                  %h4.media-heading= @post.author.name
                  %p= @post.author.bio
         
          .col-xs-12.comments-panel
            .col-xs-11.col-xs-offset-1
              .bs-example
                .panel.panel-default
                  .panel-body Комментарии
                  .panel-footer.clearfix
                    .pull-left
                      %button.btn.btn-fresh{:type => "button"}
                        Messages
                        %span.badge {{lena}}
                    .pull-right
                      
                      %button.btn.btn-fresh(ng-click="add(0, {id: id, type: 'Post', path: '0' })") Reply
                      
                      %button.btn.btn-fresh(ng-click="twitter()") Info
                      %button(ng-click="show()") FFFF
              
              .media.animate-repeat.main-media( class="col-xs-offset-{{get_offset(num.class_num)}}" ng-repeat="num in tool.arr|limitTo: tool.DF " ng-cloak ng-class="isRedClass(num)")
                %div(ng-if="num.red")
                  = render :partial => "form"
                .media(ng-if="!num.red")
                  %a.pull-left{:href => "#"}
                    %img.media-object{:alt => "Media Object", :src => "http://placehold.it/64x64"}
                  .media-body
                    #user_nav
                      = link_to "Sign in with Twitter", "/auth/twitter", :ra_ra_ra_id => "HER"
                    %h4.media-heading.text-center 
                      Media heading
                      %small.pull-right {{num.created_at| date:'yyyy-MM-dd HH:mm:ss Z'}}
                    
                    .col-md-10.center-block.comment-text
                      {{num.text}}
                    .col-md-12
                      .btn-group
                        %button.btn.btn-fresh(ng-click="add($index, {id: num.id, type: 'Comment', path: num.path })") Reply
             
